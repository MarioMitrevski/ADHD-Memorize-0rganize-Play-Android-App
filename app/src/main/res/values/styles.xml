<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColorTheme">@color/white</item>
        <item name="textColorTheme">@color/colorPrimaryDark</item>
        <item name="textBarColorTheme">@color/colorPrimaryDark</item>
        <item name="editTextColorTheme">@color/colorLightBrown</item>
        <item name="btnRoundedBackground">@color/colorPrimaryDark</item>
        <item name="windowBackground">@color/colorPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppDarkTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorAccent">@color/colorBlue</item>
        <item name="backgroundColorTheme">@color/white</item>
        <item name="textColorTheme">@color/white</item>
        <item name="textBarColorTheme">@color/darkGray</item>
        <item name="editTextColorTheme">@color/colorBlue</item>
        <item name="btnRoundedBackground">@color/colorBlue</item>
        <item name="windowBackground">@color/gray</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorBlue</item>
        <item name="android:background">@color/white</item>
        <item name="android:shadowColor">@color/colorBlue</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:textSize">22sp</item>

    </style>

</resources>
